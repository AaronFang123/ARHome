<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.arFrameActivity">
    <fragment
        android:id="@+id/sceneform_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:contentDescription="BearModel"
                android:src="@drawable/bear" />
            <ImageView
                android:id="@+id/cat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cat" />
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <LinearLayout
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/ar_back"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/return_btn"/>
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/ar_screenshot"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera_1"/>
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/ar_help"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/help"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>